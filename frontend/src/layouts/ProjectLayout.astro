---
import { Icon } from 'astro-icon/components';
import NavigationContainer from '../components/astro/NavigationContainer.astro';
import '../styles/globals.css';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="mx-auto bg-gradient-to-b from-black to-background-primary">
		<header><NavigationContainer /></header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
	@import '../styles/globals.css';
</style>
