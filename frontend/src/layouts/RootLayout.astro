---
import { Icon } from 'astro-icon/components';
import NavigationContainer from '../components/astro/NavigationContainer.astro';
import '../styles/globals.css';
import SocialMediaButtonGroup from '@/components/astro/ui/SocialMediaButtonGroup.astro';

const { title, description, imageRef, urlSlug } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<style>
			@import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');
		</style>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta charset="UTF-8" />
		<meta name="robots" content="index, follow" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={`https://spaptechnology.com/${urlSlug}`} />
		<meta property="og:image" content={imageRef} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={imageRef} />
		<meta name="author" content="Shawn Papineau, SPAP Technology Solutions" />
		<meta name="copyright" content="© 2024 SPAP Technology Solutions" />
		<link rel="canonical" href={`https://spaptechnology.com/${urlSlug}`} />
		<title>{title}</title>
	</head>

	<body class="min-h-screen mx-auto border-2 bg-background">
		<header class="bg-primary">
			<NavigationContainer />
		</header>
		<main class="min-h-screen">
			<slot />
		</main>
		<footer class="bg-primary mt-auto flex justify-between items-end">
			<Icon class="text-4xl" name={'logos/white-primary'} />
			<p class="text-xs text-center mt-8">
				© 2024 SPAP Technology Solutions. All Rights Reserved.
			</p>
		</footer>
	</body>
</html>

<style>
	@import '../styles/globals.css';
</style>
