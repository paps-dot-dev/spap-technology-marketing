---
const { name, href } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<div
	class="flex justify-between items-center w-full p-2 text-2xl font-bold rounded"
>
	<span>{name}</span>
	<a
		href={href}
		class="border-2 border-text-primary text-text-primary rounded-full px-8 py-2 hover:text-accent-primary hover:border-accent-primary hover:scale-110 duration-200 ease-linear"
	>
		<Icon class="" name="mdi:arrow-top-right" />
	</a>
</div>
