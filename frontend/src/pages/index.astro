---
import RootLayout from '../layouts/RootLayout.astro';
import { Icon } from 'astro-icon/components';
import ServicesHub from '../components/react/ServicesHub';
import TestimonialContainer from '../components/react/TestimonialContainer';
import SocialMediaIcon from '../components/astro/SocialMediaIcon.astro';
import '../index.css';
---

<RootLayout title="SPAP Technology">
	<section
		id="hero"
		class="min-h-[80vh] lg:min-h-screen relative flex flex-col w-full items-center hero-bg mt-4 lg:mt-0"
	>
		<div class="bg-black h-full absolute top-0 left-0 w-full opacity-50"></div>
		<div
			id="socials"
			class="z-10 w-fit rounded-full p-2 text-4xl ml-auto mb-auto mt-2 text-indigo-100 flex justify-evenly items-center space-x-2"
		>
			<SocialMediaIcon
				href="https://x.com/shawn_paps"
				icon="arcticons:x-twitter"
			/>
			<SocialMediaIcon
				href="https://instagram.com/shawn.paps"
				icon="arcticons:instagram"
			/>
			<SocialMediaIcon
				href="https://linkedin.com/in/shawn-papineau"
				icon="arcticons:linkedin"
			/>
			<SocialMediaIcon
				href="https://github.com/paps-dot-dev"
				icon="arcticons:github"
			/>
		</div>
		<div class="z-20 my-auto text-center">
			<h1 class="text-4xl text-white z-10 mr-auto font-bold">
