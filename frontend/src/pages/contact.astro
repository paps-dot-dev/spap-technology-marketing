---
import RootLayout from '../layouts/RootLayout.astro';
import ContactForm from '../components/react/ContactForm';
---

<RootLayout title="Let's Chat | SPAP Technology">
	<section
		class="min-h-screen flex flex-col justify-center items-center max-w-screen-sm lg:max-w-screen-2xl"
	>
		<h1
			class="text-3xl text-center font-bold bg-gradient-to-r from-purple-500 to-indigo-500 bg-clip-text text-transparent"
		>
			Ready to Amplify Your Web Presence?
		</h1>

		<ContactForm client:load />
	</section>
</RootLayout>
